# OpenAI API Configuration
OPENAI_API_KEY=your_api_key_here
BASE_URL=https://api.openai.com/v1

# Model Configuration
MODEL=gpt-4o            # Default model to use (gpt-4o, gpt-4, gpt-3.5-turbo, etc.)
EMBEDDING_MODEL=text-embedding-3-small  # Model for embeddings

# Application Configuration
SANDBOX_MODE=false      # Set to true to use sandboxed tools
LOG_LEVEL=info          # Log level: debug, info, warn, error
PORT=8080               # Server port

# Memory Configuration 
MAX_MEMORY_MESSAGES=100 # Maximum number of messages to keep in memory
MEMORY_DECAY=0.9        # Memory decay factor for long-term memory

# Tool Configuration
ALLOW_BROWSER=true      # Allow browser tools
ALLOW_TERMINAL=true     # Allow terminal tools
ALLOW_FILE_SYSTEM=true  # Allow file system tools

# File System Configuration
WORKSPACE_ROOT=./workspace  # Root directory for file operations
